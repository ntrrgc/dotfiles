#!/usr/bin/python3
import sys, os, re

try:
    indent_level = 0
    for line in sys.stdin:
        match = re.match(r"(" + r"\S+\s*" * 5 + ")(.*)", line, re.S)
        if not match:
            sys.stdout.write(line)
            continue

        if "_post:" in line:
            indent_level = max(0, indent_level - 1)
        sys.stdout.write(match.group(1) + " â†’ " * indent_level + match.group(2))
        if "_pre:" in line:
            indent_level += 1
except BrokenPipeError:
    pass
except KeyboardInterrupt:
    pass
