#!/bin/bash
video_device=(/dev/v4l/by-id/usb-INOGENI*)

videosink_options=()
rotate_options=()
flip_options=()
audio_options=(pulsesrc ! queue ! autoaudiosink)

for arg in "$@"; do
    case "$arg" in
        -f|--no-video-lag)
            # Sacrifice A/V synchronization in exchange for better responsiveness of the video
            videosink_options=(sync=false max-lateness=0)
            shift
            ;;
        -m|--mute)
            audio_options=()
            shift
            ;;
        -90l|-l90)
            rotate_options=(! videoflip video-direction=90l)
            shift
            ;;
        -90r|-r90)
            rotate_options=(! videoflip video-direction=90r)
            shift
            ;;
        -h|--mirror)
            flip_options=(! videoflip video-direction=horiz)
            shift
            ;;
    esac
done

exec gst-launch-1.0 v4l2src device=${1:-${video_device[0]}} ! video/x-raw,width=1920,height=1080,framerate=60/1 ! queue "${rotate_options[@]}" "${flip_options[@]}" ! xvimagesink "${videosink_options[@]}" "${audio_options[@]}"
