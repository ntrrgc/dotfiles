#!/usr/bin/env python3
import sys
import subprocess

# Read a list of packages from stdin
packages = [
  line
  for line in sys.stdin.read().split("\n")
]
dnf_command = "install --allowerasing " + " ".join(packages)
process = subprocess.Popen(["sudo", "dnf", "shell", "--assumeyes"], stdin=subprocess.PIPE)
process.communicate(input=dnf_command.encode())
