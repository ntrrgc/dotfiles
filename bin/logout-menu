#!/bin/bash
options=(shutdown reboot logout top windows)
option=$(printf '%s\n' "${options[@]}" | dmenu)

shutdown() {
  systemctl poweroff
}
reboot() {
  systemctl reboot
}
logout() {
  pkill -x bspwm
}
top() {
  terminology -e htop
}
windows() {
  sudo efibootmgr -n 0
  systemctl reboot
}

eval "$option"
