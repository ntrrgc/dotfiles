#!/bin/bash
set -eu

demuxer="$(basename "$0")"
source="filesrc"
prefix=()

while true; do
    case "$1" in
        -g|--gdb)
            shift
            prefix=(gdb --args)
            ;;
        -p|--push)
            shift
            source="pushfilesrc"
            ;;
        *)
            break
    esac
done

path="$1"
shift

"${prefix[@]}" gst-launch-1.0 -v "$source" location="$path" ! "$demuxer" "$@" ! fakesink silent=false
