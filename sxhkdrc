#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit

alt + F4
    bspc window -c

super + w
	bspc window -c

super + t
	bspc desktop -l next

super + b
	bspc desktop -B

super + s
	bspc window -t floating

super + shift + f
    bspc window -t fullscreen

super + {grave,Tab}
	bspc {window,desktop} -f last

super + apostrophe
	bspc window -s last

super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc window -w last.manual

#super + m
	#bspc window -s biggest

super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

super + {_,shift + }{Left,Down,Up,Right}
    bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
	bspc window -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

#super + bracket{left,right}
	#bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc window --presel {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window --presel cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

#super + {_,shift + }{5-8,1-4}
#    bspc {desktop --focus,window --to-desktop} ^{1-8}

super + {_,shift + }{F5,F6,F7,F8,F1,F2,F3,F4}
    bspc {desktop --focus,window --to-desktop} ^{1-8}

super + {_,shift + }{equal,asterisk,parenright,plus,bracketleft,braceleft,braceright,parenleft}
    bspc {desktop --focus,window --to-desktop} ^{1-8}

super + e
    bspc monitor --focus next

super + m
    bspc window --to-monitor next; \
    bspc monitor next --focus

{_,ctrl + }~button1
	bspc pointer -g focus

super + button{1-3}
	; bspc pointer -g {move,resize_side,resize_corner}

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	terminology

super + space
	dmenu_run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

super + {F11,F10,F9}
    amixer -q set Master {toggle,5%+,5%-}

XF86Audio{Mute,RaiseVolume,LowerVolume}
    amixer -q set Master {toggle,5%+,5%-}

@{_,shift + }Print
    sshot {_,-s}

super + Escape
    pkill -USR1 -x sxhkd

ctrl + alt + t
    terminology

super + control + c
    chromium

super + f
    firefox

super + v
    gvim

super + g
    gajim

super + a
    spotify

XF86Audio{Prev,Play,Stop,Next}
    mpris2 {Previous, PlayPause, Stop, Next}

super + Pause
    gvim ~/.config/sxhkd/sxhkdrc

super + Prior
    bspc desktop --flip horizontal

super + Next
    bspc desktop --flip vertical

Scroll_Lock
    toggle_numbers

ctrl + alt + Delete
    logout-menu

super + n
    watchd-notify

super + u
    bspc window -f next.urgent

super + shift + o
    email-notification open

super + shift + x
    email-notification close
