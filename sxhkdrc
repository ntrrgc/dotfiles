#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit

alt + F4
    bspc node -c

super + w
	bspc node -c

super + t
	bspc desktop --layout next

super + b
	bspc desktop -B

super + s
	bspc node --state '~floating'

super + shift + f
        bspc node --state '~fullscreen'

super + Tab
	bspc node -f next

super + shift + Tab
        bspc node -f prev

super + apostrophe
	bspc node -s last

super + {o,i}
	bspc control --record-history off; \
	bspc node {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc node -w last.manual

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {_,shift + }{Left,Down,Up,Right}
    bspc node -{f,s} {west,south,north,east}

super + {_,shift + }c
	bspc node -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

#super + bracket{west,east}
	#bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc node --presel {west,south,north,east}

super + ctrl + {_,shift + }space
	bspc {node --presel cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc node -e {west -10,south +10,north -10,east +10}

super + alt + shift + {h,j,k,l}
	bspc node -e {east -10,north +10,south -10,west +10}

super + ctrl + {1-9}
	bspc node -r 0.{1-9}

#super + {_,shift + }{5-8,1-4}
#    bspc {desktop --focus,node --to-desktop} ^{1-8}

super + {_,shift + }{F5,F6,F7,F8,F1,F2,F3,F4}
    bspc {desktop --focus,node --to-desktop} ^{1-8}

super + {_,shift + }{equal,asterisk,parenright,plus,bracketleft,braceleft,braceright,parenleft}
    bspc {desktop --focus,node --to-desktop} ^{1-8}

super + e
    bspc monitor --focus next

super + m
    last_window="$(bspc query --nodes --node focused)"; \
    bspc node --to-monitor next; \
    bspc node "$last_window" --focus

{_,ctrl + }~button1
	bspc pointer -g focus

super + button{1-3}
	; bspc pointer -g {move,resize_side,resize_corner}

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	gnome-terminal

super + space
	dmenu_run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

super + {F11,F10,F9}
    amixer -q set Master {toggle,5%+,5%-}

XF86Audio{Mute,RaiseVolume,LowerVolume}
    amixer -q set Master {toggle,5%+,5%-}

@{_,shift + }Print
    sshot {_,-s}

super + Escape
    pkill -USR1 -x sxhkd

ctrl + alt + t
    gnome-terminal

super + control + c
    chromium

super + f
    firefox

super + v
    gvim

super + g
    gajim

super + a
    spotify

XF86Audio{Prev,Play,Stop,Next}
    mpris2 {Previous, PlayPause, Stop, Next}

super + Pause
    gvim ~/dotfiles/sxhkdrc

super + Prior
    bspc node '@/' --flip horizontal

super + Next
    bspc node '@/' --flip vertical

Scroll_Lock
    toggle_numbers

ctrl + alt + Delete
    logout-menu

super + n
    watchd-notify

super + u
    bspc node -f next.urgent

super + shift + o
    email-notification open

super + shift + x
    email-notification close

super + d
    dolphin4
